	</PropertyGroup>

	<ItemGroup>
	  <None Remove="Views\SelectPage.xaml" />
	</ItemGroup>



	<ItemGroup>
	  <Page Include="Views\LocalPage.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </Page>
	  <Page Include="Views\MainPage.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </Page>
	  <Page Include="Views\MainUnoPage.xaml">
