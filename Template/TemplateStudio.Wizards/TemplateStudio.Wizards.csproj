		</PackageReference>
		<PackageReference Include="Microsoft.VisualStudio.TemplateWizardInterface">
			<Version>17.1.32210.191</Version>
		</PackageReference>
	</ItemGroup>
	<ItemGroup>
	  <Reference Include="System.Data.DataSetExtensions" />
	</ItemGroup>
