	</ItemGroup>

	<ItemGroup>

		<Compile Update="Views\LocalPage.xaml.cs">
			<CopyToOutputDirectory>Never</CopyToOutputDirectory>
		</Compile>
		
		<Compile Update="Views\MainPage.xaml.cs">
			<CopyToOutputDirectory>Never</CopyToOutputDirectory>
		</Compile>

		<Compile Update="Views\MainUnoPage.xaml.cs">
			<CopyToOutputDirectory>Never</CopyToOutputDirectory>
		</Compile>
